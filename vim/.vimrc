
set nocompatible
set modeline
set showcmd
set incsearch
set hlsearch
set number

set autoindent
set smartindent

filetype plugin indent on
syntax on

autocmd FileType text setlocal textwidth=78

set tabstop=8
set softtabstop=4
set shiftwidth=4
set expandtab

" Location of color schemes: /usr/share/vim/vim74/colors
" Copy and execute this line:
" ls /usr/share/vim/vim74/colors
color evening

